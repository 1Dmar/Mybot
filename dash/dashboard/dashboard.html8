    }

    // Initialize on load

    initTheme();*/


    // Get DOM elements

    const body = document.body;

    const themeToggle = document.getElementById('themeToggle');

    const currentTheme = localStorage.getItem('theme') || 'light';

    // Initialize theme

    document.addEventListener('DOMContentLoaded', () => {

        if (currentTheme === 'dark') {

            body.classList.add('dark');

            themeToggle.classList.replace("bx-sun", "bx-moon");

        }

        

        // Update Material Icons to match bx-icons behavior

        themeToggle.querySelector('i').textContent = 

            currentTheme === 'dark' ? 'dark_mode' : 'light_mode';

    });

    // Theme toggle handler

    themeToggle.addEventListener("click", () => {

        body.classList.toggle('dark');

        

        if (body.classList.contains('dark')) {

            localStorage.setItem('theme', 'dark');

            themeToggle.querySelector('i').textContent = 'dark_mode';

        } else {

            localStorage.setItem('theme', 'light');

            themeToggle.querySelector('i').textContent = 'light_mode';

        }

    });

    </script>
</body>

</html>
