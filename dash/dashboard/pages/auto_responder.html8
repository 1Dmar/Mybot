  <div class="auto-response-card" id="autoResponseCard">
    <form id="autoResponseForm" onsubmit="submitForm(event)">
      <div class="field">
        <label for="trigger" class="label_field">Trigger</label>
        <input type="text" id="trigger" class="input_field" placeholder="Enter trigger word or phrase" required>
      </div>
      <div class="field">
        <label for="response" class="label_field">Response</label>
        <input type="text" id="response" class="input_field" placeholder="Enter auto-response" required>
      </div>
      <div class="field">
        <label for="replyType" class="label_field">Reply Type</label>
        <select id="replyType" class="input_field">
          <option value="message">Message</option>
          <option value="reply">Reply</option>
        </select>
      </div>
      <div class="field">
        <label for="allowedRoles" class="label_field">Allowed Roles (comma separated)</label>
        <input type="text" id="allowedRoles" class="input_field" placeholder="Enter role IDs (leave empty for all)">
      </div>
      <div class="field">
        <label for="disallowedRoles" class="label_field">Disallowed Roles (comma separated)</label>
        <input type="text" id="disallowedRoles" class="input_field" placeholder="Enter role IDs (leave empty for none)">
      </div>
      <button type="submit" class="btn_primary">Add</button>
    </form>
