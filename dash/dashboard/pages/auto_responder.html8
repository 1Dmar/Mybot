  <script>
    const serverId = ${serverId}; // Replace this with actual serverId

    function showAutoResponderForm() {
      document.getElementById('mainContent').classList.add('blur');
      document.getElementById('autoResponseCard').style.display = 'block';
      document.getElementById('addNewBtn').style.display = 'none';
    }

    async function submitForm(event) {
      event.preventDefault();

      const trigger = document.getElementById('trigger').value;
      const response = document.getElementById('response').value;
      const replyType = document.getElementById('replyType').value;
      const allowedRoles = document.getElementById('allowedRoles').value.split(',').map(role => role.trim());
      const disallowedRoles = document.getElementById('disallowedRoles').value.split(',').map(role => role.trim());

      try {
        const res = await fetch(`/${serverId}/auto_responder`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ trigger, response, replyType, allowedRoles, disallowedRoles })
        });

        const result = await res.json();
        if (res.ok) {
          addAutoResponse(result);
          alert('Auto-response added successfully!');
        } else {
          alert(`Error: ${result.message}`);
        }
      } catch (error) {
        alert('Failed to add auto-response.');
      }

      document.getElementById('mainContent').classList.remove('blur');
      document.getElementById('autoResponseCard').style.display = 'none';
      document.getElementById('addNewBtn').style.display = 'block';
    }

    function addAutoResponse({ trigger, response, date }) {
      var table = document.getElementById("autoResponseTable");
      var row = document.createElement("div");
      row.className = "table_row";
      row.innerHTML = `
        <p>${trigger}</p>
        <p>${response}</p>
        <p><span class="status active"></span> Active</p>
        <p>soon</p>
        <div class="btn_box">
          <button class="btn_primary_small btn_delete" onclick="deleteRow('${trigger}')">Delete</button>
        </div>
      `;
      table.appendChild(row);
      document.getElementById("autoResponseList").style.display = 'block';
      document.getElementById("trigger").value = "";
      document.getElementById("response").value = "";
      document.getElementById("replyType").value = "message";
      document.getElementById("allowedRoles").value = "";
      document.getElementById("disallowedRoles").value = "";
    }

    async function deleteRow(trigger) {
      try {
        const res = await fetch(`/${serverId}/auto_responder/${trigger}`, {
          method: 'DELETE'
        });
        const result = await res.json();
        if (res.ok) {
          alert('Auto-response deleted successfully!');
          fetchAutoResponses();
        } else {
          alert(`Error: ${result.message}`);
        }
      } catch (error) {
        alert('Failed to delete auto-response.');
      }
    }

    async function fetchAutoResponses() {
      try {
        const res = await fetch(`/${serverId}/auto_responderr`);
        const autoResponses = await res.json();

        // Clear the table before adding new rows
        const table = document.getElementById("autoResponseTable");
        table.innerHTML = "";

        await autoResponses.forEach(({ trigger, response, date }) => {
          addAutoResponse({ trigger, response, date });
        });

        if (autoResponses.length === 0) {
          document.getElementById('autoResponseList').style.display = 'none';
          document.getElementById('addNewBtn').style.display = 'block';
        } else {
          document.getElementById('autoResponseList').style.display = 'block';
          document.getElementById('addNewBtn').style.display = 'block';
        }
      } catch (error) {
        console.error('Error fetching auto responses:', error);
      }
    }

    fetchAutoResponses();
    setInterval(fetchAutoResponses, 60000); // Update every 30 seconds
      
  
  </script>
