// تطبيق الوضع الداكن عند تحميل الصفحة إذا تم اختياره مسبقًا
document.addEventListener('DOMContentLoaded', () => {
  const currentTheme = localStorage.getItem('theme') || 'light';
  if (currentTheme === 'dark') {
    body.classList.add('dark');
    darkLight.classList.replace("bx-sun", "bx-moon");
  }
});

// تبديل الوضع الداكن والفاتح عند النقر على الزر
darkLight.addEventListener("click", () => {
  body.classList.toggle('dark');
  if (body.classList.contains('dark')) {
    localStorage.setItem('theme', 'dark');
    darkLight.classList.replace("bx-sun", "bx-moon");
  } else {
    localStorage.setItem('theme', 'light');
    darkLight.classList.replace("bx-moon", "bx-sun");
  }
});

submenuItems.forEach((item, index) => {
  item.addEventListener("click", () => {
    const isExpanded = item.classList.toggle("show_submenu");
    if (isExpanded) {
      localStorage.setItem('activeSubmenu', index);
    } else if (parseInt(localStorage.getItem('activeSubmenu')) === index) {
      localStorage.removeItem('activeSubmenu');
    }

   document.addEventListener('DOMContentLoaded', () => {
  const currentTheme = localStorage.getItem('activeSubmenu') || index;
  if (currentTheme === 'activeSubmenu') {
    body.classList.add('activeSubmenu');
    darkLight.classList.replace("activeSubmenu", "activeSubmenu");
  }
});
      
  });
});

// تطبيق حالة القائمة الفرعية المحفوظة
document.addEventListener('DOMContentLoaded', () => {
  const activeSubmenuIndex = parseInt(localStorage.getItem('activeSubmenu'));
  if (!isNaN(activeSubmenuIndex)) {
    const activeSubmenu = submenuItems[activeSubmenuIndex];
    if (activeSubmenu) {
      activeSubmenu.classList.add("show_submenu");
    }
  }
});

if (window.innerWidth < 768) {
  sidebar.classList.add("close");
} else {
  sidebar.classList.remove("close");
}

