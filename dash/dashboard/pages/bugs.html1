<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ProMcBot - Bug Report</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: #0D0D0D;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px;
            text-align: center;
        }

        .bug-container {
            background: rgba(26, 26, 26, 0.9);
            border-radius: 12px;
            width: 90%;
            max-width: 500px;
            padding: 20px;
            box-shadow: 0px 4px 15px rgba(241, 196, 15, 0.3);
            backdrop-filter: blur(10px);
        }

        .bug-container h2 {
            font-size: 24px;
            margin-bottom: 15px;
            color: #f1c40f;
        }

        .bug-container p {
            font-size: 14px;
            opacity: 0.8;
            margin-bottom: 20px;
        }

        .input-field {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            padding: 10px;
            border-radius: 8px;
            color: white;
            width: 100%;
            margin-bottom: 15px;
            outline: none;
        }
  .input-field:disabled {

            opacity: 0.5;

            cursor: not-allowed;

        }
        textarea {
            resize: none;
            height: 100px;
        }

        .send-btn {
            background: linear-gradient(135deg, #FFD700, #FFB800);
            color: black;
            font-weight: bold;
            padding: 12px 20px;
            border-radius: 8px;
            cursor: pointer;
            border: none;
            font-size: 16px;
            transition: 0.3s;
            width: 100%;
        }

        .send-btn:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }
    </style>
</head>
<body>
    <div class="bug-container">
        <h2>Report a Bug</h2>
        <p>If you encounter any issues, please fill out the form below.</p>

        <form id="bugForm">
            <input type="text" id="name" name="name" value="${global_name} (${username})" class="input-field" disabled>
            <input type="email" id="email" name="email" value="${email}" class="input-field" disabled>
            <textarea id="bug" name="bug" placeholder="Describe the issue..."  class="input-field"></textarea>
            <button type="submit" class="send-btn" id="submitBtn">Submit Report</button>
        </form>
    </div>

    <script>
          document.getElementById("bugForm").addEventListener("submit", async function(event) {
            event.preventDefault(); // منع تحديث الصفحة

            const name = document.getElementById("name").value;
            const email = document.getElementById("email").value;
            const bug = document.getElementById("bug").value;

            if (!bug) {
                
                const Toast = Swal.mixin({
  toast: true,
  position: "top-end",
  showConfirmButton: false,
  timer: 3000,
  timerProgressBar: true,
});

Toast.fire({
  icon: "error",
  title: "Failed to send report!", 
  text: 'Please describe the issue before submitting.'
}).finally(() => {
    location.reload();
});
               
                return;
            }

            // تعطيل جميع الحقول والزر أثناء الإرسال
            document.getElementById("bug").disabled = true;
            document.getElementById("submitBtn").disabled = true;
              document.getElementById("submitBtn").innerText = "Submitting...";

            const formData = new FormData();

            formData.append("name", name);

            formData.append("email", email);

            formData.append("bug", bug);

            formData.append("_captcha", "false");

            try {

                const response = await fetch("https://formsubmit.co/gamerdragon715@gmail.com", {

                    method: "POST",

                    body: formData

                });

                if (response.ok) {
const Toast = Swal.mixin({
  toast: true,
  position: "top-end",
  showConfirmButton: false,
  timer: 3000,
  timerProgressBar: true,
});

Toast.fire({
  icon: "success",
  title: "Report sent successfully!"
}).finally(() => {
    location.reload();
});
           
                } else {
 
const Toast = Swal.mixin({
  toast: true,
  position: "top-end",
  showConfirmButton: false,
  timer: 3000,
  timerProgressBar: true,
});

Toast.fire({
  icon: "error",
  title: "Failed to send report!",
  text: 'Please try again later.'
}).finally(() => {
    location.reload();
});
 // إعادة تفعيل الإدخالات في حالة الفشل

                    document.getElementById("bug").disabled = false;

                    document.getElementById("submitBtn").disabled = false;

                    document.getElementById("submitBtn").innerText = "Submit Report";

                }

            } catch (error) {

                Swal.fire({

                    icon: "error",

                    title: "Error sending report",

                    text: error.message

                });

                // إعادة تفعيل الإدخالات في حالة الفشل

                document.getElementById("bug").disabled = false;

                document.getElementById("submitBtn").disabled = false;

                document.getElementById("submitBtn").innerText = "Submit Report";

            }

        });

    
    </script>
</body>
</html>