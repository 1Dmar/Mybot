      opacity: 0.85;
      margin-bottom: 20px;
    }
    .btn {
      background-color: #5865F2;
      padding: 12px 28px;
      color: #fff;
      border-radius: 5px;
      font-weight: 500;
      transition: transform 0.3s, background 0.3s;
    }
    .btn:hover {
      transform: scale(1.05);
      background-color: #4752c4;
    }

    /* Server Section with Infinite Scroll */
    .server-container {
      position: relative;
      overflow: hidden;
      margin-top: 50px;
    }
    .server-list-wrapper {
      display: flex;
      width: max-content;
      animation: scroll 30s linear infinite;
    }
    .server-list {
      display: flex;
      gap: 30px;
      padding: 20px;
    }
    .server {
      display: flex;
      align-items: center;
      gap: 15px;
      background: #1A1A1A;
      padding: 10px 15px;
      border-radius: 10px;
      border: 2px solid #333;
      min-width: 180px;
      transition: transform 0.3s;
    }
    .server:hover {
      transform: translateY(-3px);
    }
    .server img {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      border: 2px solid #5865F2;
    }
    @keyframes scroll {
      from { transform: translateX(0); }
      to { transform: translateX(-50%); }
    }

    /* Pricing Section */
    .pricing {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin: 50px 20px;
      flex-wrap: wrap;
    }
    .card {
      width: 300px;
      padding: 25px 20px;
      border-radius: 15px;
      text-align: center;
      transition: transform 0.3s, box-shadow 0.3s;
      margin-bottom: 20px;
      position: relative;
      overflow: hidden;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }
    .card h2 {
      font-size: 1.75rem;
      margin-bottom: 15px;
    }
    .card ul {
      list-style: none;
      margin: 15px 0;
      padding: 0;
    }
    .card ul li {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 10px 0;
      font-size: 1rem;
    }
    .card ul li span {
      margin-right: 8px;
      color: #5865F2;
    }
    .basic {
      background: linear-gradient(135deg, #2A2A2A, #3A3A3A);
      border: 2px solid #5865F2;
    }
    .premium {
      background: linear-gradient(135deg, #ff8a00, #e52e71);
      border: 3px solid #ff8a00;
      color: #fff;
    }
    .premium::before {
      content: ' PREMIUM ';
      position: absolute;
      top: 10px;
      right: 10px;
      background: #ff8a00;
      color: #fff;
      font-weight: 600;
      padding: 5px 10px;
      border-radius: 8px;
      font-size: 0.9rem;
    }
    .btn-basic {
      background: #5865F2;
      color: #fff;
    }
    .btn-premium {
      background: #ff8a00;
      color: #fff;
      font-weight: 600;
    }

    /* Common Card Styles for Updates, Bot Info, Membership, etc. */
    .fancy-card {
      position: relative;
      background: linear-gradient(135deg, #2c2c2c, #1a1a1a);
      border-radius: 15px;
      padding: 30px 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.3);
      transition: transform 0.3s, box-shadow 0.3s;
      color: #f4f4f4;
      text-align: left;
      max-width: 320px;
      margin: 10px;
      overflow: hidden;
    }
    .fancy-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }
    .fancy-card .card-icon {
      font-size: 2rem;
      margin-bottom: 15px;
      color: #5865F2;
    }
    .fancy-card h3 {
      font-size: 1.3rem;
      margin-bottom: 8px;
    }
    .fancy-card p {
      font-size: 0.95rem;
      line-height: 1.4;
    }

    /* Sections */
    .section {
      padding: 60px 20px;
       
     background: #181818;
      margin-top: 50px;
    }
    .section h2 {
      margin-bottom: 40px;
      font-size: 2rem;
      color: #fff;
    }
    .card-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
    }

    /* FAQ Items */
    .faq-item {
      text-align: left;
      margin-bottom: 20px;
      padding: 15px;
      border-bottom: 1px solid #333;
      cursor: pointer;
      transition: background 0.3s;
    }
    .faq-item:hover {
      background: rgba(255, 255, 255, 0.05);
    }
    .faq-item h3 {
      margin-bottom: 10px;
      font-size: 1.1rem;
      position: relative;
      padding-right: 25px;
    }
    .faq-item h3::after {
      content: "\25BC";
      position: absolute;
      right: 0;
      transition: transform 0.3s;
    }
    .faq-item.active h3::after {
      transform: rotate(180deg);
    }
    .faq-item p {
      display: none;
      font-size: 0.95rem;
      opacity: 0.9;
      margin-top: 5px;
    }

