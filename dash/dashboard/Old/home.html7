    .header img:hover {
      transform: scale(1.05);
    }
    .nav-right {
      display: flex;
      align-items: center;
      gap: 20px;
    }
    .login-btn {
      background-color: #5865F2;
      color: #fff;
      padding: 8px 16px;
      border-radius: 5px;
      font-weight: 600;
      transition: background 0.3s;
    }
    .login-btn:hover {
      background-color: #4752c4;
    }
  
.user-dropdown {
  position: relative;
  cursor: pointer;
}

.avatar-container {
  display: flex;
  align-items: center;
